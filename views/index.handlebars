

<h1>Lets Crush Some Burgers!</h1>


<div class="container">
  <div class="row">
    <div class="col-sm">
      <h2>Burgers List</h2>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm">

      <h2>Burgers that you have eaten!</h2>

      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<div class="center">
  <h2>Add a burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="nb">Burger Name:</label>
      <input type="text" id="nb" burger_name="burger_name">
    </div>

    <button type="submit">Add burger</button>
  </form>
</div>
